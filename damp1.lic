custom_require.call(%w(common common-arcana events spellmonitor drinfomon))

class Damp
  def initialize
  
    no_pause_all
    loop do
	  activate_khri?('Dampen')
	end
  end
  
  def activate_khri?('Dampen')
    return false if DRSpells.active_spells['Dampen'] 
    result = DRC.bput('Dampen', get_data('spells').khri_preps)
    waitrt?
    DRC.fix_standing

    ['Your body is willing', 'You have not recovered'].include?(result)
  end
end

Damp.new
    