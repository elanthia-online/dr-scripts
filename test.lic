custom_require.call(%w[common  common-items  common-travel drinfomon equipmanager events spellmonitor])
class Petchecker
  include DRC
  include DRCT
  
  def initialize
    @settings = get_settings
    @pet_container = @settings.picking_pet_box_source
    @location = @settings.lichbot_room_id
    stuff
  end

  def count_pet_boxes
    @current_box_count = get_boxes(@pet_container).size
  end

  def stuff
    count_pet_boxes
    echo("  @current_box_count: #{@current_box_count}")
    get_pets
  end
  def get_pets
    if @current_box_count < 2
	  echo "< 2"
	  walk_to(@location)
	else
	  echo ">2"
	  !abort
	end
	
  end	
end
Petchecker.new
  
 
  
