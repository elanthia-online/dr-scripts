echo_action = proc do |server_string|
  open('echo_log_room.txt', 'a') do |f|
    f.puts server_string
  end
  server_string
end
DownstreamHook.add('echo_action', echo_action)

before_dying { DownstreamHook.remove('echo_action') }

loop do
  clear
end
